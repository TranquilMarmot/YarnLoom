{
  "name": "yarn-loom",
  "version": "0.0.0",
  "private": true,
  "description": "Root package for running scripts",
  "repository": {
    "type": "git",
    "url": "https://github.com/TranquilMarmot/YarnLoom.git"
  },
  "dependencies": {
    "loom-common": "file:loom-common/out",
    "loom-editor": "file:loom-editor",
    "loom-extension": "file:loom-extension",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build:common": "pnpm --filter loom-common build",
    "build:editor": "pnpm --filter loom-editor build",
    "build:extension": "pnpm --filter yarn-spinner-loom build",
    "build": "pnpm build:common && pnpm build:editor && pnpm build:extension",
    "test:common": "pnpm --filter loom-common test",
    "test:extension": "pnpm --filter yarn-spinner-loom test",
    "test:editor": "cross-env CI=true pnpm --filter loom-editor test",
    "test": "cross-env CI=true pnpm test",
    "package": "pnpm --filter yarn-spinner-loom package",
    "publish": "pnpm build && pnpm --filter yarn-spinner-loom publish",
    "prettier": "prettier --write **/*.{js,ts,tsx,md,json}",
    "lint:common": "pnpm --filter loom-common lint",
    "lint:editor": "pnpm --filter loom-editor lint",
    "lint:extension": "pnpm --filter yarn-spinner-loom lint",
    "lint": "prettier --check **/*.{js,ts,tsx,md,json} && pnpm lint",
    "version": "echo 'TODO'"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.3",
    "@testing-library/user-event": "^12.6.2",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.22",
    "@types/react": "^17.0.0",
    "@types/react-d3-graph": "^2.3.4",
    "@types/react-dom": "^17.0.0",
    "@types/rimraf": "^3.0.0",
    "@types/vscode": "^1.52.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "cross-env": "^7.0.3",
    "jest": "26.6.0",
    "prettier": "^2.2.1",
    "react-test-renderer": "^17.0.1",
    "ts-jest": "^26.5.0",
    "typescript": "^4.1.3",
    "vsce": "^1.84.0"
  },
  "engines": {
    "vscode": "^1.44.0"
  }
}
